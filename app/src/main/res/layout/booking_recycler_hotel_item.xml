<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/booking_hotel_block"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:contentPadding="@dimen/dimen_16"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/orange_light"
            app:cardCornerRadius="5dp"
            app:cardElevation="0dp">

            <TextView
                android:id="@+id/tv_booking_hotel_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_marginVertical="5dp"
                android:fontFamily="@font/sf_pro_display_medium"
                android:textColor="@color/orange"
                android:textSize="16sp"
                app:drawableStartCompat="@drawable/star_icon"
                android:text="5 Превосходно" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_booking_hotel_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Steigenberger Makadi"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/sf_pro_display_medium"
            android:textColor="@color/black"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/tv_booking_hotel_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Madinat Makadi, Safaga Road, Makadi Bay, Египет"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/sf_pro_display_medium"
            android:textColor="@color/blue"
            android:textSize="14sp"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>

